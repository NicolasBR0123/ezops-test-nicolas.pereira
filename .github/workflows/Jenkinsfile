pipeline{
     agent any

    stages {
        stage ('Build Image') {
           steps {
               script {
                   dockerapp = docker.build("web-chat-ezops:nodealpine${env.BUILD_ID}", '-f ./app/Dockerfile ./app')
               }
           }
        }

        stage ('Push Image') {
            steps {
                script {
                    docker.withRegistry('https://login.docker.com/u/login/', 'dockerhub') {
                        docker login -u 448986393877782883328382439534
                        docker.withRegistry('dckr_pat_mr7k_vWTDqUbjCBUlHD01AbqyM4')
                        dockerapp.push('latest')
                        dockerapp.push("${env.BUILD_ID}")
                    }
                }
            }
        }
    }
}
