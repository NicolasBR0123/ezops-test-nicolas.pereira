pipeline{
     agent any

    stages {
        stage ('Build Image') {
           steps {
               script {
                   dockerapp = docker.build("web-chat-ezops:nodealpine18.10", '-f ./app/Dockerfile ./app')
               }
                       stage ('Status image') { 
			  steps {
			      script {
			          echo'Image OK!'
			      }
			  }
		       }
	   }
        }

	    
        stage ('Push Image') {
            steps {
                script {
                                           
                     docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                         dockerapp.push('latest')
                         dockerapp.push("nodealpine18.10")
                    }
                }
            }
        }
    }
}
