


pipeline {
     agent any
     environment {
     DOCKERHUB_CREDENTIALS = credentials('docker-hub-nicolas')
     }

    
    stages {
    	    
    	stage('Build docker image'){
     	    steps{
    	        sh 'docker build -t web-chat/nodeapp:$BUILD_NUMBER /home/nicolas/github/repositories/ezops-test-nicolas.pereira/app/Dockerfile .'
    	    }
    	}
    	     
     	stage('Login to dockerhub'){
     	    steps{
     	        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
     	    }
     	}   
    	
	stage('Push image'){
	    steps{
	    	sh 'docker push web-chat/nodeapp:$BUILD_NUMBER'
	    }	
	}    
    }
    post{
        always{
	    sh'docker logout'
	}
    }	
        	
}   
