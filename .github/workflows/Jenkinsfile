pipeline{
     agent any

    stages {
        stage ('Build Image') {
           steps {
               script {
                   dockerapp = docker.build("web-chat-ezops:nodealpine${env.BUILD_ID}", '-f ./app/Dockerfile ./app')
               }
           }
        }

        stage ('Push Image') {
            steps {
                script {
                                           
                     docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                         dockerapp.push('latest')
                         docker login -u username --password-stdin
                         dockerapp.push("${env.BUILD_ID}")
                         docker login -u username --password-stdin
                    }
                }
            }
        }
    }
}

